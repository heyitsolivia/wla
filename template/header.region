<!doctype html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1">
    <!--Include sqs scripts, meta tags, and user content from the code injection tab.-->
    {squarespace-headers}
    <link href="/assets/styles/app.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Domine" rel="stylesheet" type="text/css">
</head>
<body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    <header class="header
        {.if collection.homepage} header--homepage{.end}">
        <squarespace:navigation navigationId="mainNav" template="navigation"/>
        <div class="row">
            <div class="small-12 large-5 large-push-7 columns">
                {.if collection.homepage}
                    <div class="hero__cta text-center large-text-left mb3">
                        <h1 class="heading--large">Your Future is Calling</h1>
                        <p class="type--medium">Code. Travel. 3D Print. Intern. Succeed in College.</p>
                        <a class="button button--ghost button--ghost-alt" href="http://twitter.com">How To Enroll</a>
                    </div>
                {.or}
                    {.if collection.title}
                        <h1 class="heading--large header__title small-only-text-center">{collection.title}</h1>
                    {.end}
                {.end}
            </div>
        </div>
        {.if collection.homepage}
            {.if collection.mainImage.assetUrl}
                <div class="hero hero--image hero--homepageImage" style="background-image: url({collection.mainImage.assetUrl});"></div>
            {.end}
        {.or }
            {.if collection.mainImage.assetUrl}
                <!-- {collection.mainImage.mediaFocalPoint.x} {collection.mainImage.mediaFocalPoint.y} -->
                <div class="hero hero--image" style="background-image: url({collection.mainImage.assetUrl});"></div>
                <div class="hero hero--overlay"></div>
            {.or}
                <div class="hero hero--pattern" style="background-image: url(/assets/images/wlapattern.jpg);"></div>
            {.end}
        {.end}
    </header>
