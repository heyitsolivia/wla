<!doctype html>
<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="initial-scale=1">
    <!--Include sqs scripts, meta tags, and user content from the code injection tab.-->
    {squarespace-headers}
    <link href="/assets/styles/app.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,600,700,400italic,700italic" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Domine" rel="stylesheet" type="text/css">
</head>
<body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    <header class="header
        {.if collection.homepage} header--homepage{.end}">
        <squarespace:navigation navigationId="mainNav" template="navigation"/>
        <div class="row">
            {.if collection.homepage}
                <div class="small-12 large-5 large-push-7 columns">
                    <div class="hero__content">
                        <div class="hero__cta text-center large-text-left mb3">
                            {.repeated section items}
                                {.equal? customContent.customType heroBlock}
                                    <h1 class="heading--large">{title}</h1>
                                    <p class="type--medium">{customContent.heroDescription}</p>
                                    <a class="button button--ghost button--ghost-alt" href="{customContent.buttonLink}">{customContent.buttonText}</a>
                                {.end}
                            {.end}
                        </div>
                    </div>
                </div>
            {.or}
                {.section collection}
                    {.if title}
                    <div class="small-12 columns">
                        <div class="hero__content">
                            <h1 class="heading--large hero__title small-only-text-center">{title}</h1>
                        </div>
                    </div>
                    {.end}
                {.end}
            {.end}
        </div>
        {.section collection}
            {.if homepage}
                {.if mainImage.assetUrl}
                    <div class="hero hero--image hero--homepageImage" style="background-image: url({mainImage.assetUrl}?format=original);"></div>
                {.end}
            {.or}
                {.if mainImage.assetUrl}
                    <div class="hero hero--image" style="background-image: url({mainImage.assetUrl}?format=original);"></div>
                    <div class="hero hero--overlay"></div>
                {.or}
                    <div class="hero hero--pattern" style="background-image: url(/assets/images/wlapattern.jpg);"></div>
                {.end}  
            {.end}
        {.end}
    </header>
