<!--ITEM LOOP-->

<div class="news-list">
    <div class="row">
    {.repeated section items}
    
        <!--WRAPPER-->

        <article id="post-{id}" class="{@|item-classes} columns small-12 medium-10 medium-offset-1 end news-list__news-article" data-item-id="{id}">
            <!--MAIN IMAGE-->

            <a href="{fullUrl}" class="main-image content-fill">
                <!-- Use originalSize as a flag to check for a custom image -->
                {.if originalSize}
                    <div class="news-list__article-image" style="background-image: url({assetUrl}?format=original);"></div>
                {.or}
                    <div class="news-list__article-image news-list__article-image--pattern"></div>
                {.end}  
               
            </a>
            <div class="news-list__article-summary block-shadow">
                <!--POST TILE-->

                <h1 class="article-summary__heading heading--medium" data-content-field="title">
                    {.passthrough?}
                        <a href="{sourceUrl}" target="_blank">{title}</a>
                    {.or}
                        <a href="{fullUrl}">{title}</a>
                    {.end}
                </h1>
                <p class="article-summary__timestamp text--small">
                    <time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time>
                </p>
                <!--EXCERPT OR BODY-->

                {.if excerpt}
                    <div class="article-summary__excerpt">
                        {excerpt}
                    </div>
                    <a class="link-arrow link-arrow--right" href="{fullUrl}">Read More</a>
                {.or}
            {.end}
        </article>
    
        {.or}
            No news posts yet.
    {.end}
    </div> <!-- end .row -->

    <!--PAGINATION-->
        
    {.if pagination}
        <div class="row">
            <div class="columns small-12 medium-10 small-centered">
                <section class="pagination">
                    <div class="row">

                        <div class="small-6 columns">
                            {.section prevItem}
                                <a href="{fullUrl}" class="link-arrow link-arrow--left type--alt">
                                    Previous
                                </a>
                            {.end}
                        </div>

                        <div class="small-6 columns text-right">
                            {.section nextItem}
                                <a href="{fullUrl}" class="link-arrow link-arrow--right type--alt">
                                    Next
                                </a>
                            {.end}
                        </div>

                    </div>
                </section>
            </div>
        </div>
    {.end}
</div>
